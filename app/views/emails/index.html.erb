<div class="row marketing">
  <div class="col-lg-12">
    <h4>Newsletter emails (<%= number_to_human @emails.size %>)</h4>
    <ul>
      <% if @emails.each do |email| %>
        <li><%= email.email %></li>
      <% end.empty? %>
        None.
      <% end %>
    </ul>
  </div>
  <div class="col-lg-12">
    <h4>User emails (<%= number_to_human @users.size %>)</h4>
    <ul>
      <% if @users.each do |user| %>
        <li><%= user.email %></li>
      <% end.empty? %>
        None.
      <% end %>
    </ul>
  </div>
  <div class="col-lg-12">
    <h4>Mailing Tools</h4>
    <%= link_to 'send trouvaille list to all emails', send_list_post_emails_path %>
    <br />
  </div>
  <div class="col-lg-12">
    <h4>Raw export tools</h4>
      <%= link_to 'newsletter emails', emails_path(raw: true, list: 'newsletter') %> -
      <%= link_to 'user emails', emails_path(raw: true, list: 'user') %> -
      <%= link_to 'all emails', emails_path(raw: true, list: 'all') %>
  </div>
</div>
